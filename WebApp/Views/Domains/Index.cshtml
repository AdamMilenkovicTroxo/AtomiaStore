@model Atomia.OrderPage.Themes.Default.ViewModels.DefaultDomainsViewModel
@using Atomia.OrderPage.Core.Models;

@{
    Layout = "~/Views/_MainLayout.cshtml";
    ViewBag.Title = "Domains";
}

<h2>Domain registration</h2>
<p>
    Fill in the form below to register one or more new domain names or to transfer an existing domain name.
</p>

<form action="." method="post">

    <fieldset>
        <legend>Alternatives</legend>
        <label for="queryType-domainreg">
            <input id="queryType-domainreg" name="queryType" type="radio" value="domainreg" data-bind="checked: DomainsPage.queryType" />
            Register new domain name
        </label>

        <label for="queryType-transfer">
            <input id="queryType-transfer" name="queryType" type="radio" value="transfer" data-bind="checked: DomainsPage.queryType" />
            Transfer existing domain name
        </label>
    </fieldset>
    

    <div data-bind="visible: DomainsPage.domainRegActive, with: DomainsPage.DomainReg">
        @Html.Partial("_DomainRegistration")
    </div>

    <div data-bind="visible: DomainsPage.domainTransferActive, with: DomainsPage.DomainTransfer">
        @Html.Partial("_DomainTransfer")
    </div>

</form>


@section scripts {
    <script src="../../Scripts/lib/api-domains.js" type="text/javascript"></script>
    <script src="../../Scripts/viewmodels/domains.js" type="text/javascript"></script>
    <script type="text/javascript">
        Atomia.ViewModels.DomainsPage.init(Atomia.ViewModels.Root);
        Atomia.ViewModels.DomainReg.init(Atomia.ViewModels.DomainsPage);
        Atomia.ViewModels.DomainTransfer.init(Atomia.ViewModels.DomainsPage);
    </script>
}
