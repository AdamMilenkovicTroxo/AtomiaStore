                <th class="right" scope="col" style="width: 20%;">Subtotal</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <td class="right" colspan="4">Subtotal:</td>
                <td class="right nowrap" colspan="1">34,98<span class="currency">EUR</span></td>
            </tr>
            <tr>
                <td class="right" colspan="4">VAT 25%:</td>
                <td class="right nowrap" colspan="1">8,75<span class="currency">EUR</span></td>
            </tr>
            <tr class="strong">
                <td class="right" colspan="4">Amount to pay:</td>
                <td class="right nowrap" colspan="1">43,73<span class="currency">EUR</span></td>
            </tr>
        </tfoot>
        <tbody>
            <tr id="hidden5" style="display: table-row;">
                <td>mydomain<strong>.com</strong></td>
