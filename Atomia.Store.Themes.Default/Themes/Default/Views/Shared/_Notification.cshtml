<div id="notification" class="notification" style="display: none;" data-bind="visible: notification.isOpen, css: notification.messageType">
    <div class="margins">
        <a class="close-btn" id="notification-close" href="javascript:void(0);" title="@Html.CommonResource("Dismiss")" data-bind="click: notification.close">
            <span class="icn_close"></span>
        </a>
        <h4 data-bind="text: notification.title"></h4>
        <p data-bind="text: notification.message"></p>
    </div>
</div>
