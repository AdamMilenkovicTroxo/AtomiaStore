<h4>@Html.CommonResource("Invoice")</h4>

<table class="list display strong" id="product_list">
    <thead>
        <tr>
            <th class="ta_left" scope="col">@Html.CommonResource("Product")</th>
            <th scope="col">@Html.CommonResource("Period")</th>
            <th class="right" scope="col" style="width: 20%;">@Html.CommonResource("Fee")</th>
            <th class="right" scope="col" style="width: 20%;">@Html.CommonResource("Discount")</th>
            <th class="right" scope="col" style="width: 20%;">@Html.CommonResource("Subtotal")</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <td class="right" colspan="4">@Html.CommonResource("Subtotal"):</td>
            <td class="right nowrap" colspan="1" data-bind="text: cart.subTotal"></td>
        </tr>
        <tr>
            <td class="right" colspan="4">VAT:</td>
            <td class="right nowrap" colspan="1" data-bind="text: cart.tax"></td>
        </tr>
        <tr class="strong">
            <td class="right" colspan="4">@Html.CommonResource("AmountToPay"):</td>
            <td class="right nowrap" colspan="1" data-bind="text: cart.total"></td>
        </tr>
    </tfoot>
    <tbody>
        <!-- ko foreach: cart.cartItems() -->
        <tr style="display: table-row;">
            <td>
                <strong data-bind="text: Name"></strong>
                <br />
                <span class="fine-print">
                    <span data-bind="text: Category"></span>
                    <span data-bind="visible: !isDomainItem() && attrs.DomainName !== undefined, text: ', ' + attrs.DomainName"></span>
                </span>
            </td>
            <td class="right">
                <!-- ko if: RenewalPeriod === undefined || RenewalPeriod === null -->
                <span>-</span>
                <!-- /ko -->
                <!-- ko if: RenewalPeriod !== undefined && RenewalPeriod !== null -->
                <span data-bind="text: RenewalPeriod.Display"></span>
                <!-- /ko -->
            </td>
            <td class="right nowrap" data-bind="text: Price"></td>
            <td class="right nowrap" data-bind="text: Discount"></td>
            <td class="right nowrap" data-bind="text: Total"></td>
        </tr>
        <!-- /ko -->
        <tr style="display: table-row;" data-bind="visible: cart.campaignCode">
            <td>
                <strong>@Html.CommonResource("CampaignCode"):</strong> <span data-bind="text: cart.campaignCode"></span>
            </td>
            <td class="right"></td>
            <td class="right nowrap"></td>
            <td class="right nowrap"></td>
            <td class="right nowrap"></td>
        </tr>
    </tbody>
</table>